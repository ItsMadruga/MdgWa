<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/change_color_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="@string/lorem_ipsum_dolor"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/color_argb_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/current_color_s"
            android:textSize="12sp" />

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/color_argb_view"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center_vertical"
        android:src="@android:color/transparent"
        app:civ_border_color="@color/civ_default_color"
        app:civ_border_width="1.5dp"
        app:civ_circle_background_color="@color/civ_default_background" />

</LinearLayout>